// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  PAST_DUE
  TRIALING
}

model User {
  id                  String    @id @default(uuid())
  email               String    @unique
  name                String?
  passwordHash        String?   // Hashed password (nullable for backwards compatibility)
  emailVerified       Boolean   @default(true)  // Changed to true by default since we're not using email verification
  termsAcceptedAt     DateTime?
  termsVersion        String?
  privacyAcceptedAt   DateTime?
  privacyVersion      String?
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  
  // Stripe fields (prepared for future integration)
  stripeCustomerId    String?   @unique
  stripeSubscriptionId String?
  subscriptionStatus  SubscriptionStatus?
  
  // Relations
  accounts            Account[]
  sessions            Session[]
  flashcardSets       FlashcardSet[]
  practiceTests       PracticeTest[]
  studyPlans          StudyPlan[]
  microLessons        MicroLesson[]
  
  @@index([email])
}

model Session {
  id          String    @id @default(uuid())
  userId      String?
  sessionId   String?   // For anonymous sessions
  expiresAt   DateTime
  createdAt   DateTime  @default(now())
  
  user        User?     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionId])
  @@index([expiresAt])
}

model Account {
  id                String   @id @default(uuid())
  userId            String
  provider          String   // "email"
  providerAccountId String
  accessToken       String?
  refreshToken      String?
  expiresAt         DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerAccountId])
  @@index([userId])
}

model VerificationToken {
  id        String   @id @default(uuid())
  email     String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  @@index([email])
  @@index([token])
  @@index([expiresAt])
}

model FlashcardSet {
  id        String   @id @default(uuid())
  userId    String?
  sessionId String?  // For anonymous sessions
  title     String
  topic     String
  cards     String   // JSON string of FlashcardData[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionId])
}

model PracticeTest {
  id        String   @id @default(uuid())
  userId    String?
  sessionId String?  // For anonymous sessions
  section   String   // "math" | "reading" | "writing"
  topic     String?
  difficulty String? // "Easy" | "Medium" | "Hard" | "Mixed"
  questions String   // JSON string of questions array
  passage   String?  // For reading sections
  score     Int?     // Optional score (deprecated - use scaledScore instead)
  scaledScore Int?   // SAT scaled score (200-800)
  rawScore   Int?    // Raw score (correct answers)
  maxRawScore Int?   // Maximum possible raw score
  timeSpent  Int?    // Time spent in minutes
  completedAt DateTime? // When the test was completed/scored
  createdAt DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionId])
  @@index([completedAt])
}

model StudyPlan {
  id        String   @id @default(uuid())
  userId    String?
  sessionId String?  // For anonymous sessions
  plan      String   // JSON string of PersonalizedPlan
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionId])
}

model MicroLesson {
  id        String   @id @default(uuid())
  userId    String?
  sessionId String?  // For anonymous sessions
  topic     String
  lesson    String   // JSON string of Lesson object
  createdAt DateTime @default(now())
  
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([sessionId])
}
